{
  "name": "@codexcommunion/liturgical-theme",
  "version": "1.0.1",
  "description": "A lightweight, framework-agnostic liturgical theming package for Catholic websites, combining Catholic CSS variables with liturgical calendar calculations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx}"
  },
  "keywords": [
    "catholic",
    "liturgical",
    "theming",
    "css",
    "calendar",
    "romcal",
    "colors",
    "seasons",
    "framework-agnostic",
    "lightweight",
    "docusaurus",
    "bootstrap",
    "mantine",
    "tailwind"
  ],
  "author": "CodexCommunion",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codexcommunion/liturgical-theme.git"
  },
  "bugs": {
    "url": "https://github.com/codexcommunion/liturgical-theme/issues"
  },
  "homepage": "https://github.com/codexcommunion/liturgical-theme#readme",
  "dependencies": {
    "catholic-css": "^1.0.4",
    "romcal": "^1.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  }
}
